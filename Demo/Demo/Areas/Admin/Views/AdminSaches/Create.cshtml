@model Demo.Models.Sach

@{
    ViewData["Title"] = "Tạo Sản Phẩm";
    Layout = "~/Areas/Admin/Views/Shared/Admin_Layout.cshtml";
}

<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" asp-controller="AdminSaches" method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="MaTs" class="control-label">Mã Tựa Sách</label>
                <input asp-for="MaTs" class="form-control" />
                <span asp-validation-for="MaTs" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TenTs" class="control-label">Tên Tựa Sách</label>
                <input asp-for="TenTs" class="form-control" />
                <span asp-validation-for="TenTs" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MaTl" class="control-label">Mã Thể Loại</label>
                <select asp-for="MaTl" class ="form-control" asp-items="ViewBag.DanhMuc">
                    <option disabled selected>Chọn Thể Loại</option>
                </select>
            </div>
            <div class="form-group">
                <label asp-for="Gia" class="control-label">Giá</label>
                <input asp-for="Gia" class="form-control" />
                <span asp-validation-for="Gia" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SoLuong" class="control-label">Số Lượng</label>
                <input asp-for="SoLuong" class="form-control" />
                <span asp-validation-for="SoLuong" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NamXb" class="control-label">Năm Xuất Bản</label>
                <input asp-for="NamXb" class="form-control" />
                <span asp-validation-for="NamXb" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MaNsx" class="control-label">Mã NSX</label>
                <select asp-for="MaNsx" class ="form-control" asp-items="ViewBag.MaNsx">
                    <option disabled selected>Chọn Thể Loại</option>
                </select>
            </div>
            <div class="form-group">
                <label asp-for="MaKho" class="control-label">Mã Kho</label>
                <select asp-for="MaKho" class ="form-control" asp-items="ViewBag.MaKho">
                    <option disabled selected>Chọn Thể Loại</option>
                </select>
            </div>
            <div class="form-group">
                <label asp-for="Anh" class="control-label">Ảnh Đại Diện</label>
                <input name="fileAnh" asp-for="Anh" type="file" class ="form-control"/>
                <span asp-validation-for="Anh" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Thêm" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

