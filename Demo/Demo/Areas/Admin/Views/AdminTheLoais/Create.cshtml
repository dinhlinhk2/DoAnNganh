@model Demo.Models.TheLoai

@{
    ViewData["Title"] = "Tạo Thể Loại";
    Layout = "~/Areas/Admin/Views/Shared/Admin_Layout.cshtml";
}

<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="MaTl" class="control-label">Mã Thể Loại</label>
                <input asp-for="MaTl" class="form-control" />
                <span asp-validation-for="MaTl" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TenTl" class="control-label">Tên Thể Loại</label>
                <input asp-for="TenTl" class="form-control" />
                <span asp-validation-for="TenTl" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Thêm" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
