@model Demo.Models.KhachHang

@{
	ViewData["Title"] = "Thông Tin Khách Hàng";
	Layout = "~/Areas/Admin/Views/Shared/Admin_Layout.cshtml";
}

<div class="page-header">
	<div class="header-sub-title">
		<nav class="breadcrumb breadcrumb-dash">
			<a asp-area="Admin" asp-action="Index" asp-controller="Home" class="breadcrumb-item"><i class="anticon anticon-home m-r-5"></i>Home</a>
			<a class="breadcrumb-item" asp-area="Admin" asp-action="Index" asp-controller="AdminSaches">Danh Sách Khách Hàng</a>
			<span class="breadcrumb-item active">Thông Tin Khách Hàng</span>
		</nav>
	</div>
</div>
<div class="card">
	<div class="card-body">
		<h4 class="card-title">Thông Tin Khách Hàng</h4>
		<div class="table-responsive">
			<table class="product-info-table m-t-20">
				<tbody>
					<tr>
						<td>ID:</td>
						<td class="text-dark font-weight-semibold">@Model.MaDg</td>
					</tr>
					<tr>
						<td>Tên Khách Hàng:</td>
						<td>@Model.TenDg</td>
					</tr>
					<tr>
						<td>Địa Chỉ:</td>
						<td>@Model.DiaChi</td>
					</tr>
					<tr>
						<td>Số Điện Thoại:</td>
						<td>@Model.Sdt</td>
					</tr>
					<tr>
						<td>Giới Tính:</td>
						<td>@Model.GioiTinh</td>
					</tr>
					<tr>
						<td>Ngày Sinh:</td>
						<td>@Model.NgaySinh</td>
					</tr>
					<tr>
						<td>Mật Khẩu:</td>
						<td>@Model.MatKhau</td>
					</tr>
					<tr>
						<td>Ngày Tạo :</td>
						<td>@Model.NgayTao</td>
					</tr>
					<tr>
						<td>Email :</td>
						<td>@Model.Email</td>
					</tr>
					<tr>
						<td>Tình Trạng :</td>
						<td>@Model.Active</td>
					</tr>

			</table>
		</div>

	</div>
</div>
<div>
	<a asp-action="Index">Trở Lại</a>
</div>
