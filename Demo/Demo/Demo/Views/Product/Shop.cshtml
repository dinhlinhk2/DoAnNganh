@model PagedList.Core.IPagedList<Demo.Models.Sach>
@using PagedList.Core.Mvc
@{
	int curPage = ViewBag.CurrentPage;
	ViewData["Title"] = "Danh Sách Sản Phẩm " + curPage;
	Layout = "~/Views/Shared/_Layout.cshtml";
	int pageNext = curPage + 1;
}
<!-- Begin Main Content Area -->
<main class="main-content">
	<div class="breadcrumb-area breadcrumb-height" data-bg-image="~/assets/images/breadcrumb/bg/1-1-1920x373.jpg">
		<div class="container h-100">
			<div class="row h-100">
				<div class="col-lg-12">
					<div class="breadcrumb-item">
						<h1 class="breadcrumb-heading">Bán Sách Online</h1>
						<ul>
							<li>
								<a href="/">Home <i class="pe-7s-angle-right"></i></a>
							</li>
							<li>Danh Sách Sản Phẩm</li>
						</ul>
					</div>
				</div>
			</div>
		</div>
	</div>
	<div class="shop-area section-space-y-axis-100">
		<div class="container">
			<div class="row">
				<div class="col-lg-3 order-2 pt-10 pt-lg-0">
					<div class="sidebar-area">
						<div class="widgets-searchbox mb-9">
							<form id="widgets-searchbox" action="#">
								<input id="kw" name="kw" class="input-field" type="text" placeholder="Tìm Kiếm">
								<button class="widgets-searchbox-btn" type="submit">
									<i class="pe-7s-search"></i>
								</button>
							</form>
						</div>
					</div>
				</div>
				<div class="col-lg-9 order-1">
					<div class="product-topbar">
						<ul>
							<li class="product-view-wrap">
								<ul class="nav" role="tablist">
									<li class="grid-view" role="presentation">
										<a id="grid-view-tab" data-bs-toggle="tab" href="#grid-view" role="tab" aria-selected="true">
											<i class="fa fa-th"></i>
										</a>
									</li>
									<li class="list-view" role="presentation">
										<a class="active" id="list-view-tab" data-bs-toggle="tab" href="#list-view" role="tab" aria-selected="true">
											<i class="fa fa-th-list"></i>
										</a>
									</li>
								</ul>
							</li>
							<li class="page-count">
								Trang <span style="color: palevioletred">@(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber)</span> trong <span style="color: palevioletred">@Model.PageCount</span>
							</li>
							<li class="short">
								<select class="nice-select wide rounded-0" id="TLid" name="TLid" asp-items="ViewBag.TheLoai">
									<option disabled selected>Chọn Thể Loại</option>
									<option value="0">Tất Cả</option>
								</select>
							</li>
						</ul>
					</div>
					<div id="records_table" class="tab-content text-charcoal pt-8">
						<div class="tab-pane fade" id="grid-view" role="tabpanel" aria-labelledby="grid-view-tab">
							<div class="product-grid-view row">
								@if (Model != null && Model.Count() > 0)
								{
									foreach (var item in Model)
									{
										string url = $"/{item.TenTs}-{item.MaTs}.html";
										<div class="col-lg-4 col-sm-6">
											<div class="product-item">
												<div class="product-img img-zoom-effect">
													<a href="@url">
														<img class="img-full" src="~/images/saches/@item.Anh" alt="@item.TenTs">
													</a>
													<div class="product-add-action">
														<ul>
															<li>
																<a href="@url">
																	<i class="pe-7s-cart"></i>
																</a>
															</li>
															<li>
																<a href="compare.html">
																	<i class="pe-7s-shuffle"></i>
																</a>
															</li>
															<li>
																<a href="wishlist.html">
																	<i class="pe-7s-like"></i>
																</a>
															</li>
														</ul>
													</div>
												</div>
												<div class="product-content">
													<a class="product-name" href="@url">@item.TenTs</a>
													<div class="price-box pb-1">
														<span class="new-price">@item.Gia.Value.ToString("#,##0") VNĐ</span>
													</div>
													<div class="rating-box">
														<ul>
															<li><i class="pe-7s-star"></i></li>
															<li><i class="pe-7s-star"></i></li>
															<li><i class="pe-7s-star"></i></li>
															<li><i class="pe-7s-star"></i></li>
															<li><i class="pe-7s-star"></i></li>
														</ul>
													</div>
												</div>
											</div>
										</div>
									}
								}

							</div>
						</div>
						<div class="tab-pane fade show active" id="list-view" role="tabpanel" aria-labelledby="list-view-tab">
							<div class="product-list-view with-sidebar row">
								@if (Model != null && Model.Count() > 0)
								{
									foreach (var item in Model)
									{
										string url = $"/{item.TenTs}-{item.MaTs}.html";
										<div class="col-12 pt-6">
											<div class="product-item">
												<div class="product-img img-zoom-effect">
													<a href="@url">
														<img class="img-full" src="~/images/saches/@item.Anh" alt="@item.TenTs">
													</a>
													<div class="product-add-action">
														<ul>
															<li>
																<a href="@url">
																	<i class="pe-7s-cart"></i>
																</a>
															</li>
															<li>
																<a href="compare.html">
																	<i class="pe-7s-shuffle"></i>
																</a>
															</li>
															<li>
																<a href="wishlist.html">
																	<i class="pe-7s-like"></i>
																</a>
															</li>
														</ul>
													</div>
												</div>
												<div class="product-content align-self-center">
													<a class="product-name pb-2" href="@url">@item.TenTs</a>
													<div class="price-box pb-1">
														<span class="new-price">@item.Gia.Value.ToString("#,##0") VNĐ</span>
													</div>
													<div class="rating-box pb-2">
														<ul>
															<li><i class="pe-7s-star"></i></li>
															<li><i class="pe-7s-star"></i></li>
															<li><i class="pe-7s-star"></i></li>
															<li><i class="pe-7s-star"></i></li>
															<li><i class="pe-7s-star"></i></li>
														</ul>
													</div>
													<p class="short-desc mb-0">@item.TenTs</p>
												</div>
											</div>
										</div>
									}
								}
							</div>
						</div>
					</div>
					<div aria-label="pagination-area pt-10">
						<ul class="pagination justify-content-center">
							<pager class="pager-container" options="@PagedListRenderOptions.Bootstrap4PageNumbersOnly" list="@Model" asp-area="" asp-controller="Product" asp-action="Shop"></pager>
						</ul>
					</div>
				</div>
			</div>
		</div>
	</div>
</main>
<!-- Main Content Area End Here -->
@section Scripts{
	<script>
		$(document).ready(function() {
			jQuery("#TLid").change(function() {
				var TLid = jQuery(this).children(":selected").attr("value");
				TLid = parseFloat(TLid);
				$('#TLid option')
					.removeAttr('selected');
				$("#TLid > [value=" + TLid + "]").attr("selected", "true");
				$.ajax({
					url: "/Product/Filter",
					datatype: "json",
					type: "GET",
					data: {
						TLid: TLid
					},
					async: true,
					success: function(results) {
						if (results.status == "success") {
							window.location.href = results.redirectUrl;
						}
					},
					error: function(xhr) {
						alert('error');
					}
				});
			});

			$("#kw").keyup(function() {
				var kw = $('#kw').val();
				$.ajax({
					url: '/Search/findSP/',
					datatype: "json",
					type: "POST",
					data: {
						kw: kw
					},
					async: true,
					success: function(results) {
						$("#records_table").html("");
						$("#records_table").html(results);
					},
					error: function(xhr) {
						alert('error');
					}
				})
			})
		});
	</script>
}
